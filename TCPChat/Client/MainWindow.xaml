<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="314" Width="463" Closing="Window_Closing">
    <Grid>
        <Button x:Name="Start" Content="Подключиться" HorizontalAlignment="Left" Margin="221,10,0,0" VerticalAlignment="Top" Width="109" Click="Start_Click" Height="26"/>
        <Label x:Name="lblStatus" Content="Не подключен" HorizontalAlignment="Left" Margin="330,10,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="tbMessage" Height="23" Margin="10,0,90,10" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Button x:Name="pbSend" Content="Отправить" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" Click="pbSend_Click" Height="23" VerticalAlignment="Bottom"/>
        <ListBox x:Name="lbLog" Margin="10,41,10,38"/>
        <TextBox x:Name="tbAddress" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPort" HorizontalAlignment="Left" Height="26" Margin="135,10,0,0" TextWrapping="Wrap" Text="8888" VerticalAlignment="Top" Width="72"/>

    </Grid>
</Window>
